@model ProductAddViewModel

@{
    ViewData["Title"] = "Add Product";
}

<div class="d-flex mb-5">
    <h3 class="mr-auto">Add Product</h3>
</div>

<div class="row">
    <div class="col-6">
        <form action="@Url.Action("Insert")" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label>Category</label>
                <select class="form-control" name="categoryId" required="">
                    <option value=""></option>
                    @if (Model.Categories.Any())
                    {
                        foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <label>Name</label>
                <input type="text" name="name" class="form-control" required/>
            </div>
            <div class="form-group">
                <label>Price</label>
                <input type="number" name="price" class="form-control" required/>
            </div>
            <div class="form-group">
                <label>images</label>
                <input type="file" class="form-control pt-1 pl-1" name="images" accept="image/png, image/jpeg, image/jpg" multiple/>
            </div>
            <button class="btn btn-primary" type="submit">
                Submit
            </button>
        </form>
    </div>
</div>