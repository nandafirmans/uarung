@model ProductAddViewModel

@{
    ViewData[Constant.ViewDataKey.Title] = "Add Product";
}

<div class="d-flex mb-3">
    <h3 class="mr-auto">Add Product</h3>
</div>

<div class="row">
    <div class="col-6">
        <form action="@Url.Action("Insert")" method="POST" enctype="multipart/form-data" autocomplete="off">
            <div class="form-group">
                <label>Category</label>
                <select class="form-control" name="categoryId" required="">
                    <option value=""></option>
                    @if (Model.Categories.Any())
                    {
                        foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    }
                </select>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" name="name" maxlength="50" class="form-control" required/>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label>Price</label>
                        <input type="number" name="price" class="form-control" required/>
                    </div>  
                </div>
            </div>
            <div class="form-group">
                <label>Images</label>
                <input type="file" class="form-control pt-1 pl-1" name="images" accept="image/png, image/jpeg, image/jpg" multiple/>
            </div>
            <div class="d-flex">
                <button class="btn btn-primary ml-auto mt-1" type="submit">
                    Submit
                </button>
            </div>
        </form>
    </div>
</div>