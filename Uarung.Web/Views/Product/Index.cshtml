@model List<Product>

@{
    ViewData[Constant.ViewDataKey.Title] = "Product";
}

<div class="d-flex mb-5">
    <h3 class="mr-auto">Product</h3>
    <a class="btn btn-primary mr-2" asp-controller="Product" asp-action="Category">
        Product Category
    </a>
    <a class="btn btn-outline-primary" asp-controller="Product" asp-action="Add">
        Add Product
    </a>
</div>

<table class="table">
    <thead class="thead-light">
    <tr>
        <th scope="col">#</th>
        <th scope="col" style="width: 20px">Id</th>
        <th scope="col">Name</th>
        <th scope="col">Category</th>
        <th scope="col">Price</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @if (Model != null)
    {
        var i = 1;
        foreach (var product in Model)
        {
            <tr>
                <td>@i</td>
                <td>
                    <a href="@Url.Action("Edit", new {id = product.Id})">
                        @product.Id
                    </a>
                </td>
                <td>@product.Name</td>
                <td>@product.CategoryName</td>
                <td>@product.Price.ToString("N0")</td>
                <td>
                    <form action="@Url.Action("Delete", new { id = product.Id })">
                        <button type="submit" class="btn btn-danger btn-sm p-0 lh-0 rounded-circle">
                            <span data-feather="x"></span>
                        </button>
                    </form>

                </td>
            </tr>

            i++;
        }
    }
    </tbody>
</table>