@model List<Uarung.Model.Product>

@{
    ViewData["Title"] = "Product";
}

<div class="d-flex mb-5">
    <h3 class="mr-auto">Product</h3>
    <a class="btn btn-primary mr-2" asp-controller="Product" asp-action="Category">
        Product Category
    </a>
    <a class="btn btn-outline-primary" asp-controller="Product" asp-action="Add">
        Add Product
    </a>
</div>

<table class="table">
    <thead class="thead-light">
    <tr>
        <th scope="col">#</th>
        <th scope="col">Id</th>
        <th scope="col">Name</th>
        <th scope="col">Category</th>
        <th scope="col">Price</th>
    </tr>
    </thead>
    <tbody>
    @if (Model != null)
    {
        var i = 0;
        foreach (var product in Model)
        {
            <tr>
                <td>@i</td>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.CategoryName</td>
                <td>@product.Price.ToString("N0")</td>
            </tr>

            i++;
        }
    }
    </tbody>
</table>