@{
    ViewData[Constant.ViewDataKey.Title] = "Add User";

    var roles = new[]
    {
        string.Empty,
        Constant.UserRole.Admin,
        Constant.UserRole.Cashier,
    };

    var genders = new Dictionary<string, char>()
    {
        {string.Empty, char.MaxValue},
        {Constant.UserGender.MaleKey, Constant.UserGender.MaleValue},
        {Constant.UserGender.FemaleKey, Constant.UserGender.FemaleValue},
    };
}

@section ScriptFooter 
{
    <script type="text/javascript">
        $(".phone").on("keypress", function(event) {
            if(isNaN(event.key) || event.keyCode === 18)
                return false;
        });
    </script>
}

<div class="row mb-5">
    <div class="col-md-6">
        <div class="d-flex mb-3">
            <h3 class="mr-auto">Add User</h3>
        </div>
        <form action="@Url.Action("Submit")" method="POST" role="form" autocomplete="off">
            <div class="form-group">
                <label>Full Name</label>
                <input type="text" name="Name" class="form-control" maxlength="50" required />
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label>Phone</label>
                        <input type="text" name="Phone" class="form-control phone" maxlength="15" required/>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" name="Email" class="form-control" maxlength="15" required/>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label>Role</label>
                        <select class="form-control" name="Role" required="">
                            @foreach (var role in roles)
                            {
                                <option value="@role">@role</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label>Gender</label>
                        <select class="form-control" name="Gender" required="">
                            @foreach (var g in genders)
                            {
                                <option value="@g.Value">@g.Key</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <hr/>
            <div class="form-group">
                <label>Username</label>
                <input type="text" name="Username" class="form-control" maxlength="50" required/>
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" name="Password" class="form-control" maxlength="50" required/>
            </div>
            <div class="d-flex">
                <button class="btn btn-primary ml-auto mt-1" type="submit">
                    Submit
                </button>
            </div>
        </form>
    </div>
</div>